<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/requestlogo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/idea" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:paddingLeft="12dp"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile Number : "
                android:textSize="15sp" />

            <TextView
                android:id="@+id/requestNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8142559849"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Operator : "
                android:textSize="15sp" />

            <TextView
                android:id="@+id/requestOperatorType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Airtel"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Circle : "
                android:textSize="15sp" />

            <TextView
                android:id="@+id/requestCircleType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Andhra predesh"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sim Type : "
                android:textSize="15sp" />

            <TextView
                android:id="@+id/requestSimType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GSM"
                android:textSize="15sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

